<div class="container-center text-center">
  <h1>Your tasks</h1>

  <div class="container">
    <div class="row justify-content-center">
      <% @tasks.each do |task| %>
        <div class="box-task">
          <% if task.completed %>
            <input type="checkbox" checked="checked" onclick="return false;">
          <% else %>
            <input type="checkbox" onclick="return false;">
          <% end %>
          <%= link_to task.title, task_path(task) %> <%= link_to '• 🗑️', task_path(task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete '#{task.title}'?" } %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="btn btn-primary button">
    <%= link_to "Add a new task", new_task_path %>
  </div>
</div>
